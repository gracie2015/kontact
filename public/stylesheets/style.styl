body
  padding: 0px
  margin-top: 0px
  margin-bottom: 16px
  font: 12px "Lucida Grande", Helvetica, Arial, sans-serif
  background-color: #f0f0f0
  
a
  color: #00B7FF
  cursor: pointer

textarea
  resize: vertical

.shadowed
  box-shadow: 0 0 5px #909090

.round-corner
  border-radius: 10px

input.underlined
  border: 0px
  border-bottom: dashed 1px lightgrey
  outline: none
  margin-top: 7px
  margin-bottom: 7px
  font-size: smaller
  color: #777777
  width: 100%

.vertical-input-group .topctrl
  margin-bottom: 0px
  border-bottom: 1px dashed lightgrey
  border-bottom-left-radius: 0px
  border-bottom-right-radius: 0px
.vertical-input-group .bottomctrl
  margin-top: 0px
  border-top: 0
  border-top-left-radius: 0px
  border-top-right-radius: 0px

.nav li
  font-size: 14px

.navbar-opacity
  background-color: rgba(240, 240, 240, 0.8)
  
.navbar-brand
  position: absolute
  width: 100%
  left: 0
  top: 0
  text-align: center
  margin: auto
  
.navbar-brand #navbar-search
  width: 350px
  height: 50px
  margin-left: auto
  margin-right: auto
  margin-top: -8px

@media screen and (max-width: 768px)
  .navbar-brand #navbar-search
    width: 250px
  
.navbar-profile
  width: 32px
  height: 32px
  position: relative
  overflow: hidden
  display: inline-table

.shortcut
  position: fixed
  bottom: 25px
  right: 25px
  background-color: #882222
  padding: 6px
  width: 32px
  height: 32px
  text-align: center
  vertical-align: middle
  box-shadow: 0 0 10px #441111

.shortcut:hover
  background-color: #2e6e9e

.shortcut span
  font-size: small
  color: white
  
.carousel div
  width: 100%
  height: 300px
  position: relative
  overflow: hidden
  margin-left: auto
  margin-right: auto

.carousel img
  position: absolute
  margin: auto
  top: 0
  bottom: 0
  left: 0
  right: 0
  width: 100%
  
.account-header
  width: 100%
  height: 300px
  text-align:center
  padding-top: 80px
  background-color: white
   
.account-header #profile-img
  width: 96px
  height: 96px
  margin-left: auto
  margin-right: auto
  overflow: hidden
  position: relative
  border: 0px dotted lightgrey
  box-shadow: 0 0 5px #909090

.overlay-container
  position: relative

.overlay-container #overlay
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%

.overlay-container:hover #overlay
  background-color: white
  opacity: 0.5
  
.account-header #profile-name
  width: 100%
  height: 48px
  text-align: center
  font-size: 24px
  padding-top: 16px
  
.account-header hr
  margin-top: 15px
  margin-bottom: 10px

.account-header li
  float: none
  display: inline-block
  zoom: 1
  margin-left: 32px
  margin-right: 32px
  
.account-header ul
  text-align: center
  min-width: 740px

.profile-container
  max-width: 600px
  display: block
  margin: auto;

.profile-container .section-container
  background-color: white
  padding-left: 32px
  padding-right: 32px
  padding-top: 16px
  padding-bottom: 16px
  margin-top: 24px

.upload-progress
  padding: 0
  -webkit-box-shadow: inset 0 1px 2px rgba(0,0,0,.1)
  box-shadow: inset 0 1px 2px rgba(0,0,0,.1)

.upload-ctrl
  padding: 8px
  padding-top: 16px
  background-color: white

#upload-dropzone
  border: 2px dashed #cdcddd
  height: 230px
  text-align: center
  font-size: x-large
  color: #dddddd

#upload-dropzone span
  display: inline-block
  vertical-align: middle

.deckgrid-container
  margin-left: auto
  margin-right: auto
  width: 1200px

.deckgrid[deckgrid]::before
  content: '4 .column.column-1-4'
  font-size: 0
  visibility: hidden

.deckgrid .column
  float: left

.deckgrid .column-1-4
  width: 25%

@media screen and (max-width: 767px)
  .deckgrid-container
    width: 100%
  .deckgrid[deckgrid]::before
    content: '1 .column.column-1-1'
  .deckgrid .column-1-1
    width: 100%

@media screen and (min-width: 768px)
  .deckgrid-container
    width: 100%
  .deckgrid[deckgrid]::before
    content: '1 .column.column-1-1'
  .deckgrid .column-1-1
    width: 100%

@media screen and (min-width: 992px)
  .deckgrid-container
    width: 560px
  .deckgrid[deckgrid]::before
    content: '2 .column.column-1-2'
  .deckgrid .column-1-2
    width: 50%

@media screen and (min-width: 1200px)
  .deckgrid-container
    width: 840px
  .deckgrid[deckgrid]::before
    content: '3 .column.column-1-3'
  .deckgrid .column-1-3
    width: 33%

.snapcard
  margin: 4px
  margin-top: 0px
  margin-bottom: 8px
  padding: 8px
  background-color: white
  border-radius: 8px

.angular-google-map-container
  height: 400px